# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# WhatsApp Integration (UltraMsg)
ULTRAMSG_API_URL=https://api.ultramsg.com
ULTRAMSG_INSTANCE_ID=your_instance_id_here
ULTRAMSG_TOKEN=your_token_here
MY_PHONE_NUMBER=1234567890

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Gmail Integration
GMAIL_CREDENTIALS_FILE=./credentials/gmail_credentials.json
GMAIL_TOKEN_FILE=./credentials/gmail_token.json
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send,https://www.googleapis.com/auth/gmail.modify

# Calendar Integration
CALENDAR_CREDENTIALS_FILE=./credentials/calendar_credentials.json
CALENDAR_TOKEN_FILE=./credentials/calendar_token.json
CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar.readonly,https://www.googleapis.com/auth/calendar.events

# Email Processing
EMAIL_CHECK_INTERVAL=300
AUTO_CHECK_EMAILS=true
MAX_EMAILS_PER_CHECK=10

# AI Processing
AI_PROCESSING_TIMEOUT=30
MAX_EMAIL_LENGTH=5000
ENABLE_CONVERSATION_MEMORY=true
MEMORY_WINDOW_SIZE=10

# Database
DATABASE_URL=sqlite:///./assistant.db
# For PostgreSQL: postgresql://username:password@localhost:5432/assistant

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Optional: Redis for caching
# REDIS_URL=redis://localhost:6379/0

# Optional: Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Optional: Prometheus for metrics
# PROMETHEUS_ENDPOINT=http://localhost:9090/metrics


